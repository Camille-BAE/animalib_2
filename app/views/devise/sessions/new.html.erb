<div class=bg_sign_in>
    <h1 class="text-center mx-auto text-secondary">Connexion</h1>
    <br><br>
  <div class="d-flex justify-content-center" style="max-width: auto;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <br>
    <input type="email" class="form-control" placeholder="Adresse email" autofocus: true >
    </div>
    <br>

    <div class="field">
      <%= f.label :mot_de_passe %><br>
      <input type="password" class="form-control" placeholder="********", autofocus: true>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field"><br>
      <%= f.check_box :remember_me %>
      <%= f.label :se_souvenir_de_moi %>
    </div>
    <% end %>
    <br>
     <div class="button text-center">
       <div class="actions">
         <%= f.submit "Se connecter", class: "btn btn-secondary" %>
       </div>  
    <% end %>

    <%= render "devise/shared/links" %>

  </div></div>  
</div>
<br><br><br>
