<div class=bg_new_password>
    <h1 class="text-center mx-auto text-secondary mb-6">Mot de passe oublié ?</h1>
    <br><br>
  <div class="d-flex justify-content-center" style="max-width: auto;">
   <br />
 
 <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
 <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>
    <br>
      <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" %>
  </div>
 <br>
 <div class="button text-center">
   <div class="actions">
      <%= f.submit "Réinitialiser mon mot de passe", class: "btn btn-secondary" %>
   </div>
    <% end %>

   <%= render "devise/shared/links" %>
  </div>
</div> 
<br><br><br>